pipeline {
    agent any
    tools {
        jdk 'JDK 21'
    }
    environment {
        PATH = "${tool 'JDK 21'}/bin:${env.Path}"
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/jott0/java.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Compiling Java source...'
    
                bat 'javac Main.java'
            }
        }

        stage('Run') {
            steps {
                echo 'Running Java application...'
                bat 'java Main'
            }
        }
    }
}
